.guide {
  width: 100%;
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0;
  filter: blur(5px);
}

.images {
  width: 100%;
  overflow: hidden;
  height: 100vh;
  display: flex;
}

.image-item {
  width: 100%;
  flex-shrink: 0;
  transition: transform 0.7s ease;
}

.guide-footer {
  position: fixed;
  width: 100%;
  height: 100px;
  bottom: 0;
  z-index: 999;
  opacity: 0.7;
  bottom: -100px;
  transition: bottom 1s;
}

.logo {
  position: absolute;
  top: 0;
  width: 100%;
  height: 100vh;
  display: flex;
  justify-content: center;
}

.logo-image {
  width: 400rpx;
  margin: 0 auto;
  position: absolute;
  top: 10%;
  margin: 0 auto;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 5px;
  z-index: 20;
  margin-left: 5px;
  transition: opacity 1s;
  opacity: 0;
}

.logo-show {
  opacity: 1;
}

.footer-show {
  bottom: 0px;
}