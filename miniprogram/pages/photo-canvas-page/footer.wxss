.footer {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 80px;
  display: flex;
  align-items: center;
  /* opacity: 0.7; */
  z-index: 999;
}

.footer-left,
.footer-right {
  flex: 1;
  background-color: #4d4d4d;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 100;
}

