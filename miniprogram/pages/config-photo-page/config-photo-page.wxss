@import "./../../fonts/index.wxss";
@import "./layout-mode.wxss";

.official-account {
  position: fixed;
  z-index: 999999;
  top: -200px;
  left: 0;
  right: 0;
  margin: 0 auto;
  transition: top 0.7s;
}

.official-account-show {
  top: 0px;
}

.container {
  width: 100%;
  height: 100vh;
  padding: 0;
}

.body {
  width: 100%;
  height: 100vh;
}

.main-canvas,
.render-canvas {
  position: absolute;
  z-index: 1;
  width: 100%;
  height: calc(100vh - 80px);
}

.render-canvas {
  z-index: -1;
}

.footer {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 80px;
  background-color: black;
  display: flex;
  align-items: center;
  opacity: 0.7;
  padding-right: 10px;
}

.back-wrapper {
  height: 50px;
  width: 50px;
  margin-left: 12px;
  text-align: center;
  line-height: 50px;
}

.back-wrapper:before {
  font-family: 'iconfont';
  content: '\e61f';
  font-size: 26px;
  color: white;
}

.color-group {
  flex: 1;
  height: 100%;
  margin-left: 20px;
  margin-right: 20px;
  overflow-x: scroll;
  display: flex;
  align-items: center;
}

.color-group-item {
  width: 30px;
  height: 30px;
  border-radius: 50%;
  margin-right: 20px;
  flex-shrink: 0;
  border: 2px solid white;
  text-align: center;
  line-height: 30px;
  color: white;
}

.save-button-wrapper {
  width: 65px;
  height: 65px;
  background-color: white;
  border-radius: 50%;
  text-align: center;
  line-height: 65px;
}

.save-button-wrapper:before {
  font-family: 'iconfont';
  content: '\e60f';
  font-size: 33px;
  color: rgba(100, 100, 100, 0.5);
}

.save-button-wrapper-hover {
  background-color: rgba(255, 255, 255, 0.7);
}

.save-button-wrapper-hover:before {
  color: rgba(255, 255, 255, 0.9) !important;
}

.gray {
  background-color: gray;
}

.black {
  background-color: black;
}

.green {
  background-color: green;
}

.red {
  background-color: red;
}

.blue {
  background-color: blue;
}

.none {
  background-color: green;
}

.obverse {
  background-color: green;
}

.active {
  border: 3px solid white;
  width: 35px;
  height: 35px;
}